@model IEnumerable<ZooSite.Models.Photo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="main-title">Zoo Attractions</h1>
<div class="container">
   @foreach (var item in Model)
   {
       <div class="photo-index-card">
           @if (item.PhotoFileName != null)
           {
               <div class="image-wrapper"><img src="@Url.Action("GetImage", "Zoo", new { PhotoId = item.PhotoID})" class="photo-display-img" /></div>
           }
           <h3 class="display-picture-title">@Html.DisplayFor(model => item.Title)</h3>
           <div><span class="display">@Html.DisplayFor(model => item.Description)</span></div>
       </div>
   }
</div>

